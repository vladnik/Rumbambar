'use strict'

# Declare app level module which depends on filters, and services
angular.module('rumba', ['ngResource','rumba.filters', 'rumba.services', 'rumba.directives', 'rumba.controllers']).
  config ['$routeProvider', ($routeProvider) ->
    $routeProvider.when '/view1',
      templateUrl: "<%= asset_path('partial1.html') %>",
      controller: 'MyCtrl1'

    $routeProvider.when '/view2',
      templateUrl: "<%= asset_path('partial2.html') %>",
      controller: 'MyCtrl2'

    $routeProvider.otherwise redirectTo: '/view1'
  ]